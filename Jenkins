pipeline {
    agent any

    tools {
        nodejs 'NodeJS 22.9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Create build artifact
                sh 'npm run build'
            }
        }

        stage('Set Permissions') {
            steps {
                // Change permissions for the node_modules/.bin folder
                sh 'chmod -R +x node_modules/.bin'
            }
        }

        stage('Unit Test') {
            steps {
                // Run Mocha unit tests
                sh 'npx mocha'
            }
        }

        stage('Code Quality') {
            steps {
                // Run ESLint for code quality
                sh 'npm run lint'
            }
        }

        stage('Deploy') {
            steps {
                // Run the server in a test environment (on a different port)
                sh 'npm run start --port=4000 &'
            }
        }
    }

    post {
        always {
            deleteDir()  // Clean up workspace after pipeline run
        }
        success {
            echo 'Build, Test, and Deploy stages completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
