pipeline {
    agent any

    tools {
        nodejs 'NodeJS 22.9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                // Use npx to run mocha from node_modules
                sh 'npx mocha'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npm run deploy'
            }
        }
    }

    post {
        always {
            deleteDir()
        }
        success {
            echo 'Build, Test, and Deploy stages completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
