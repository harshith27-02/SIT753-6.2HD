pipeline {
    agent any

    tools {
        // Use the name of the NodeJS installation you configured in Jenkins
        nodejs 'NodeJS 22.9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Install Node.js dependencies using npm
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                // Run your test scripts, assuming you have them configured in package.json
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Run your deploy script (replace with your actual deployment command)
                sh 'npm run deploy'
            }
        }
    }

    post {
        always {
            // Clean up workspace after the build
            deleteDir()
        }
        success {
            echo 'Build, Test, and Deploy stages completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
