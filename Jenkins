pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    // Install Node.js dependencies
                    sh 'npm install' // Install dependencies from package.json
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run Node.js tests using your testing framework (e.g., Mocha, Jest)
                    sh 'npm test' // Assuming you have a test script defined in package.json
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Simulate deployment
                    // For real deployment, you could use SSH or cloud-based methods (e.g., Heroku, AWS)
                    echo "Simulating deployment of build artifacts..."
                }
            }
        }
    }

    post {
        always {
            // Clean up the workspace after the pipeline
            deleteDir()
        }
    }
}
