pipeline {
    agent any

    tools {
        nodejs 'NodeJS 22.9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Set Permissions') {
            steps {
                // Grant execute permissions to Webpack in node_modules
                sh 'chmod -R +x node_modules/.bin'
               
            }
        }

        stage('Build') {
            steps {
                // Run the build script from package.json
                sh 'npm run build'
            }
        }

        stage('Unit Test') {
            steps {
                // Run Mocha tests
                sh 'npx mocha'
            }
        }
        

        stage('Deploy') {
            steps {
                // Run the server in the background
                sh 'npm run start --port=4000 &'
            }
        }
    }

    post {
        always {
            deleteDir()  // Clean up workspace after pipeline run
        }
        success {
            echo 'Build, Test, and Deploy stages completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
