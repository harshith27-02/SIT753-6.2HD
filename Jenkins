pipeline {
    agent any

    tools {
        nodejs 'NodeJS 18' // Use the configured Node.js version
    }

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Simulating deployment of build artifacts..."
                    sh 'npm start'
                }
            }
        }
    }

    post {
        always {
            deleteDir() // Clean up workspace
        }
    }
}
