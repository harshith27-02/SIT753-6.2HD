pipeline {
    agent any

    tools {
        nodejs 'NodeJS 22.9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Set Permissions') {
            steps {
                // Change permissions for the node_modules/.bin folder
                sh 'chmod -R +x node_modules/.bin'
            }
        }

        stage('Unit Test') {
            steps {
                // Run Mocha tests using npx
                sh 'npx mocha'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npm run start &'
            }
        }
    }

    post {
        always {
            deleteDir()
        }
        success {
            echo 'Build, Test, and Deploy stages completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
